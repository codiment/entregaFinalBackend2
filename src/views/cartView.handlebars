{{!-- Aqui estara la vista del carrito --}}

<div>
    <h2>Carrito</h2>
</div>
<div class="infoContain">
    <button class="btn-form"><a href="/api/sessions/current">ProfileðŸ‘¤</a></button>
</div>
<div class="cartContainer" data-cart-id="{{cid}}">
        <ul class="productContain">
            {{#each cart}}
                <li class="cartProduct">
                    <div class="infoContain">
                        <img src={{this.thumbnails}} alt={{this.title}}>
                    </div>
                    <div class="infoContain">
                        {{!-- <p><span class="font">Product Id:</span> {{this.productId}}</p> --}}
                        <p><span class="font">Title:</span> {{this.title}}</p>
                    </div>
                    <div class="infoContain">
                        <p><span class="font">Quantity:</span> {{this.quantity}}</p>
                        <p><span class="font">Category:</span> {{this.category}}</p>
                        <p><span class="font">Price x unit:</span> ${{this.price}}</p>
                    </div>
                </li>
            {{/each}}
        </ul>

</div>

<div class="actionContain">
    <div>
        <button class="btn-form cleanCart">Clean Cart</button>
    </div>
    <div>
        <button class="btn-form buyCart">Buy</button>
    </div>
</div>
   

